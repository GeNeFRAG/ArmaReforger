{
  "appId": "org.armamortars.calculator",
  "appName": "Arma Mortar Calculator",
  "webDir": "www",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#1a1f1e"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1a1f1e",
      "showSpinner": false,
      "launchAutoHide": true
    },
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    }
  }
}
